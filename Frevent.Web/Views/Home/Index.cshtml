@model IEnumerable<Frevent.Web.ViewModels.EventViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EventID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>

<div class="panel-footer">
    @using (Html.BeginForm("Create", "Home", FormMethod.Post,
        new {enctype = "multipart/form-data", @class = "form-inline"}))
    {
        <div class="form-group">
            <label class="sr-only" for="eventStart">Start</label>            
            <input type="datetime-local" class="form-control" name="eventStart" placeholder="Start">
        </div>
        <div class="form-group">
            <label class="sr-only" for="eventEnd">End</label>
            <input type="datetime-local" class="form-control" name="eventEnd" placeholder="End">
        </div>
        <div class="form-group">
            <label class="sr-only" for="eventName">Name</label>
            <input type="text" class="form-control" name="eventName" placeholder="Name">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    }
</div>